theme: 'herman'
dest: docs/
src: core/

herman:
  sass:
    includepaths:
      - 'core'
    includes:
      - 'luscious'
  extraDocs:
    - name: 'ReadMe'
      path: README.md
    - name: 'Changelog'
      path: CHANGELOG.md

groups:
  Project Settings:
    settings: 'Settings'
  Utilities:
    utils: 'Utilities'
    layout: 'Layout'
  Internal:
    int-settings: 'Settings'
    int-help: 'Helpers'
